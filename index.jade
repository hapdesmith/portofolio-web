doctype html
html
    head
        link(href="./index.css" rel="stylesheet")
        link(href="../modules/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet")
        link(rel="preconnect" href="https://fonts.gstatic.com")
        link(href="https://fonts.googleapis.com/css2?family=Poppins:wght@100;200;300;400;500;600;700;900&display=swap" rel="stylesheet")
    body
        header
            .container
                a(href="#").logo H.
                nav
                    - var navi = ["Home", "About Us", "Services", "Portofolio", "Contact", "Blog"]
                        each item in navi
                            a(href="#" class=`${item.toLowerCase()}`)= item
        main
            section.hero
                .container
                    .hero-text-container
                        h1.title Saya Hapdesmith
                        p.description Saya adalah gamer dan programmer
                        a(href="#").btn.btn-primary Hire Me
                    .hero-image
                        img(src="../images/hero_img.png" alt="hapdmesith hero image")
            section.about
                .container
                    h2.section-title.left About Me
                    .section-body
                        .description
                            p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                            p Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nu pariatur excepteur sint occaecat.
                        a(href="#").btn.btn-medium.btn-primary View Works
                        a(href="#").btn.btn-medium.btn-o-primary Download CV
            section.services
                .container
                    h2.section-title Services
                    .section-body
                        .description
                            p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                        .box-container
                            mixin boxStyle(color, icon, title)
                                .box(class=`box-${color}`)
                                    .text-container
                                        i.fa(class=`fa-${icon}`)
                                        .title=title
                                        .box-description
                                            block
                            +boxStyle('blue', 'bar-chart-o', 'UX RESEARCH')
                                p Lorem ipsum dolor sit amet, consectetur adipisicing elit 1
                            +boxStyle('yellow', 'file-code-o', 'WEB DEVELOPMENT')
                                p Lorem ipsum dolor sit amet, consectetur adipisicing elit 2
                            +boxStyle('red', 'gears', 'APP DESIGN')
                                p Lorem ipsum dolor sit amet, consectetur adipisicing elit 3
                            +boxStyle('green', 'gamepad', 'WEB DESIGN')
                                p Lorem ipsum dolor sit amet, consectetur adipisicing elit 4
            section.works
                .container
                    h2.section-title Latest Work
                    .section-body
                        .description
                            p Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.
                        .filter-box
                            a(href="#" data-filter="*").is-selected All
                            a(href="#" data-filter=".uix") UI / UX
                            a(href="#" data-filter=".fe") Frontend Dev
                            a(href="#" data-filter=".ph") Photography

                        mixin gridStyle(title, imageName, workType, sizeType = '')
                            .grid-item(class=`${workType.join(" ")} ${sizeType}`)
                                .item
                                    img(src=`../images/${imageName}.jpg`)
                                a(href="#").info
                                    i.fa.fa-search
                                    h2=title.toUpperCase()
                                    span=workType.join(" , ").toUpperCase()
                                    

                        .grid
                            .grid-sizer
                            +gridStyle('judul work a','work-a', ['uix', 'fe'], 'grid-big')
                            +gridStyle('judul work c','work-c', ['uix', 'ph'])
                            +gridStyle('judul work d','work-d', ['uix', 'fe', 'ph'])
                            +gridStyle('judul work e','work-e', ['fe'])
                            +gridStyle('judul work f','work-f', ['uix'])
                            +gridStyle('judul work g','work-g', ['uix'])
                            +gridStyle('judul work h','work-h', ['ph', 'fe'])
                            +gridStyle('judul work i','work-b', ['ph'], 'grid-big-h')
    script(src="../modules/jquery.min.js")
    script(src="../modules/isotope.pkgd.min.js")
    script(src="../main.js")
                    
        

